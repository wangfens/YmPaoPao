<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/left_drawer_list_bg"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/first_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/drawer_item_layout_selector"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_left_image1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/icon_likes"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_center_text1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Message"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/item_right_image1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/numb_bg_1"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/item_right_image_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/numb_bg_2"
                android:gravity="center"
                android:paddingBottom="2dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="2dip"
                android:text="24"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/first_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/letf_draw_item_pressed"
        />

    <LinearLayout
        android:id="@+id/second_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/drawer_item_layout_selector"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_left_image2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/icon_likes"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_center_text2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="PaoPao"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/item_right_image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/numb_bg_1"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/item_right_image_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/numb_bg_2"
                android:gravity="center"
                android:paddingBottom="2dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="2dip"
                android:text="24"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/second_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/letf_draw_item_pressed"
        />

    <LinearLayout
        android:id="@+id/three_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/drawer_item_layout_selector"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_left_image3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/icon_likes"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_center_text3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="FeedBack"
            android:textColor="@color/white"
            android:textSize="25sp"/>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:id="@+id/item_right_image3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/numb_bg_1"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/item_right_image_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/numb_bg_2"
                android:gravity="center"
                android:paddingBottom="2dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="2dip"
                android:text="24"
                android:textColor="@color/white"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/three_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/letf_draw_item_pressed"
        />

    <LinearLayout
        android:id="@+id/four_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/drawer_item_layout_selector"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/item_left_image4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/icon_likes"/>
        </LinearLayout>

        <TextView
            android:id="@+id/item_center_text4"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="left|center"
            android:text="Free To Pay"
            android:textColor="@color/white"
            android:textSize="25sp"/>


    </LinearLayout>

    <View
        android:id="@+id/four_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:visibility="gone"
        android:background="@android:color/darker_gray"
        />

    <LinearLayout
        android:id="@+id/five_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/drawer_exit_item_layout_selector"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_center_text5"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="LogOut"
            android:textColor="@color/white"
            android:textSize="25sp"/>
    </LinearLayout>

</LinearLayout>